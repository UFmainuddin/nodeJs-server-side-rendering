<form class="text-center border border-light p-5" action="/delete/{{tutorial._id}}" method="POST">
    <h1>Delete Course</h1>
    <div class="form-group">
        <label for="title">Course Title</label>
        <input type="text" disabled="disabled" class="form-control" placeholder="Course name" value="{{tutorial.title}}" name="title">
    </div>
    <div class="form-group">
        <label for="description">Course Description</label>
        <textarea class="form-control" disabled="disabled" placeholder="Description" name="description">{{tutorial.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="imageUrl">Image url</label>
        <input type="text" disabled="disabled" class="form-control" placeholder="Image Url"
            value="{{tutorial.imageUrl}}" name="imageUrl">
    </div>
    <div class="form-check">
        <input type="checkbox" disabled="disabled" class="form-check-input" id="check-box" name="isPublic" {{#if tutorial.isPublic}}checked{{/if}}>
        <label class="form-check-label" for="check-box">Public</label>
    </div>
    <button type="submit" class="btn btn-primary">confirm delete</button>
</form>
 